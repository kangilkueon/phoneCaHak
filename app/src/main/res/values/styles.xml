<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeEtc" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style  name="MyActionBar">
        <item name="android:background">#CDDC39</item>
    </style>

    <!-- Top Button -->
    <!-- Button Area -->
    <style name="topButtonArea">
        <item name="android:layout_margin">10dp</item>
    </style>
    <!-- Button -->
    <style name="buttonTop">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <!-- Button landscape-->
    <style name="buttonTopLand">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Structure template Button -->
    <style name="buttonStructure">
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">192dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="buttonStructureLand">
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">108dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
