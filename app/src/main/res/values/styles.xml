<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Top Button -->
    <!-- Button Area -->
    <style name="topButtonArea">
        <item name="android:layout_margin">10dp</item>
    </style>
    <!-- Button -->
    <style name="buttonTop">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:padding">15dp</item>
    </style>
    <!-- Button landscape-->
    <style name="buttonTopLand">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- Structure template Button -->
    <style name="buttonStructure">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="buttonStructureLand">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">54dp</item>
