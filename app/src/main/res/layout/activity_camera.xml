<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <SurfaceView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/cameraSurface"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />
        <LinearLayout
            style="@style/topButtonArea"
            android:id="@+id/buttonArea"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                style="@style/buttonTop"
                android:id="@+id/selectStructureButton"
                android:background="@drawable/btn_structure_off"/>
            <Button
                style="@style/buttonTop"
                android:id="@+id/button2"
                android:background="@drawable/btn_timer_off" />
            <Button
                style="@style/buttonTop"
                android:id="@+id/button3"
                android:text="크롭"/>
            <Button
                style="@style/buttonTop"
                android:id="@+id/rotateCameraButton"
                android:text="회전" />
            <Button
                style="@style/buttonTop"
                android:id="@+id/button5"
                android:text="더보기" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/shutterArea"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/gyroStatus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gyro_off"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/cameraButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_shutter_of" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/structureImageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <LinearLayout
            android:id="@+id/structureLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/buttonArea"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
